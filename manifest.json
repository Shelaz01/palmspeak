{
  "manifest_version": 3,
  "name": "PalmSpeak ASL Translator",
  "description": "Real-time ASL sign recognition for video calls and meetings",
  "version": "1.2",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "desktopCapture"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
 "content_scripts": [
    {
      "matches": [
        "https://*.teams.microsoft.com/*",
        "https://teams.live.com/*",
        "https://*.zoom.us/*",
        "https://zoom.us/j/*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}